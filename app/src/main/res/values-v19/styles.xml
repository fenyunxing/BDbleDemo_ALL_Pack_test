<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="actionBarStyle">@style/myactionbar</item>-->
    </style>
    <style name="ColorTranslucentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--<item name="actionBarStyle">@style/myactionbar</item>-->
    </style>
    <style name="myactionbar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/toolbar_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="chat_date_style">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">#BEBDBE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="NotificationContent" parent="android:TextAppearance.StatusBar.EventContent" />

</resources>